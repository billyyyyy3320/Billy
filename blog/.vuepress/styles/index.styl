@require './mobile.styl'
@require './content.styl'

#app
  background-color $mainBgColor

// header
#header
  background-color $mainBgColor
  box-shadow 0 5px 20px rgba(0, 0, 0, 0.06), 0 6px 6px rgba(0, 0, 0, 0.1)

.header-wrapper
  .title a
    color $textColor

  .header-right-wrap .nav .nav-item a
    color $textColor

    &.router-link-active
      color $accentColor

    &:hover
      border-bottom 1px solid $accentColor
      color $accentColor

.search-box input
  color #000000

blockquote
  color $accentColor
